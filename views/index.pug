extends layout

block content
  .setup
    h1= title
    p Welcome to #{title}
    div
      form(action='/devices', method='post')
        ul
          each device, index in devices.items
            li
                = device.label + " " + "(" + device.dth.deviceTypeName + ")"
                input(type='submit', value="on", data-transition='fade', data-theme='c', name=device.deviceId, id=device.deviceId)

